
set nu
set rnu
let mapleader = ","
"Quick edit vimrc
nnoremap <leader>ev :vsplit ~/_vimrc<cr>
nnoremap <leader>v :tabe ~/_vimrc<cr>
nnoremap <leader>sv :source ~/_vimrc<cr>
autocmd bufwritepost .vimrc source ~/_vimrc 
	"map for all modes, vmap for just visual, nmap for just normal	
syntax on 
